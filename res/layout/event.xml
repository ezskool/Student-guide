<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" style="@style/studentguide_layout">

	<include layout="@layout/statusbar" android:id="@+id/statusbar" />

	<ScrollView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/layout_text_event" android:layout_below="@id/statusbar">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical">

			<TextView style="@style/text" android:id="@+id/tv_event_title"
				android:textSize="18dip" android:textStyle="bold"
				android:layout_marginBottom="10px" android:fitsSystemWindows="true" />
			<TextView style="@style/text" android:id="@+id/tv_event_description"
				android:fitsSystemWindows="true" />
			<TextView style="@style/text" android:id="@+id/tv_event_link"
				android:fitsSystemWindows="true" android:textSize="16dip"
				android:textColor="#9999FF" />
		</LinearLayout>
	</ScrollView>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_alignParentBottom="true" android:layout_height="wrap_content"
		android:orientation="vertical">
		<TextView style="@style/text" android:text="@string/event_content_by" />
		<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/iv_event_banner"
			android:layout_gravity="center_horizontal" />
	</LinearLayout>


</RelativeLayout>