<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	style="@style/studentguide_layout" android:orientation="horizontal">

	<ImageView android:id="@+id/img_item_icon"
		android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_vertical"/>


	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:paddingLeft="5px">
		<TextView android:id="@+id/text1" android:textSize="14dip"
			style="@style/text" android:textStyle="bold" />

		<TextView android:id="@+id/text2" style="@style/text"
			android:textSize="14dip" />
	</LinearLayout>

</LinearLayout>