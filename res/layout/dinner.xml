<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" style="@style/studentguide_layout">
	<include layout="@layout/statusbar" android:id="@+id/statusbar"/>
	
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_below="@id/statusbar">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:scrollbarAlwaysDrawVerticalTrack="true" android:id="@+id/layout_dinner_entry">

		</LinearLayout>
	</ScrollView>

</RelativeLayout>
