<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:orientation="vertical">
		<EditText android:layout_width="200px" android:layout_height="wrap_content"
			android:id="@+id/et_searchtext" android:hint="@string/et_course_id"
			android:singleLine="true" />

		<Button style="@style/buttons" android:id="@+id/btn_search"
			android:text="@string/btn_search" android:layout_gravity="center_horizontal" />
	</LinearLayout>
</RelativeLayout>